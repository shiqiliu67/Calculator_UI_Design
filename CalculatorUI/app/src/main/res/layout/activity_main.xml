<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="340dp"/>-->
    <RelativeLayout
        android:layout_marginTop="340dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/button_ac"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="AC"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:textAlignment="center"
                    />

                <Button
                    android:id="@+id/button_delete"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="del"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_reminder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="%"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_division"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="/"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_number_7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_white"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_multipy"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="x"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_number_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_mins"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_number_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_plus"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_positive_or_negative"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="+/-"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_number_0"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_point"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="."
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>

                <Button
                    android:id="@+id/button_equal"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="="
                    android:textColor="@color/teal_700"
                    android:textSize="25dp"
                    android:background="@drawable/button_white"
                    android:textAlignment="center"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>